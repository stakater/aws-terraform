[Unit]
Description=gocd agent for continuous deployment to DEV environment
Requires=gocd.service
After=gocd.service

[Service]
EnvironmentFile=/etc/environment
EnvironmentFile=/var/lib/apps/gocd/envvars
TimeoutStartSec=0
ExecStartPre=/usr/bin/docker pull ${GOCD_AGENT_IMAGE}
ExecStartPre=-/usr/bin/docker rm %n
ExecStart=/usr/bin/sh -c "/usr/bin/docker run --rm --name %n ${GOCD_AGENT_CD_DEV_OPTS} ${GOCD_AGENT_IMAGE}"
ExecStop=-/usr/bin/docker stop %n
RestartSec=10
Restart=always
